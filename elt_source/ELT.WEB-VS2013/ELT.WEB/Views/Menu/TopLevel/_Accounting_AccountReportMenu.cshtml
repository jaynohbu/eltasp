<link href="@Url.Content("~/Content/css/tab_accounting_account_report.css")" rel="stylesheet" type="text/css" />
<div id="AccountReportDiv" style="overflow: hidden; height: 28px; position: relative;
    left: 0px; width: 100%">
    <div id="divMore" style="cursor: pointer; height: 28px; position: absolute; z-index: 1;
        width: 20px">
    <ul id="AccountReportUL" style="position: absolute; margin-left: -57px; left: 0px;
        width: 4000px">
       <li id="Sales"><a class="noLeft" 
            href="@Url.Content("~/Accounting/Sales/parm=sales")" >
                <span>Sales</span></a></li>
        <li id="Expenses"><a class="noLeft" 
            href="@Url.Content("~/Accounting/Expenses/parm=expns")" >
                <span>Expenses</span></a></li>
      
        <li id="GeneralLedger"><a class="noLeft" 
            href="@Url.Content("~/Accounting/GeneralLedger/parm=genl")" >
                <span>General Ledger</span></a></li>
    </ul>
    </div>
</div>
 <script type="text/javascript">
     $(document).ready(function () {
         //reset menu
         var submenues = $("#AccountReportUL>li");
         submenues.each(function (index) {
             $(this).removeClass("selected");

         });

         //detect the name of view
         var currUrl = $(location).attr('href');
         var parts = currUrl.split("/");
         var currView = parts[4];
         if (currView != "")
             $("#" + currView + ">a").addClass("selected");

         // $(".CurAirExportDiv").attr("id", "CurAirExportDiv");
     });
</script>