<link href="@Url.Content("~/Content/css/tab_accounting_account_financial.css")" rel="stylesheet" type="text/css" />
<div id="FinancialDiv" style="overflow: hidden; height: 28px; position: relative;
    left: 0px; width: 100%">
    <div id="divMore" style="cursor: pointer; height: 28px; position: absolute; z-index: 1;
        width: 20px">
    <ul id="FinancialUL" style="position: absolute; margin-left: -57px; left: 0px; width: 4000px">
       <li id="BalanceSheet"><a class="noLeft" 
            href="@Url.Content("~/Accounting/BalanceSheet/parm=bal")" >
            <span>Balance Sheet
            </span></a></li>
        <li id="IncomeStatement"><a class="noLeft" 
            href="@Url.Content("~/Accounting/IncomeStatement/parm=incom")" >
            <span>Income Statement
            </span></a></li>
        <li id="TrialBalance"><a class="noLeft" 
            href="@Url.Content("~/Accounting/TrialBalance/parm=trial")" >
            <span>Trial Blanace
            </span></a></li>
    </ul>
    </div>
</div>
 <script type="text/javascript">
     $(document).ready(function () {
         //reset menu
         var submenues = $("#FinancialUL>li");
         submenues.each(function (index) {
             $(this).removeClass("selected");

         });

         //detect the name of view
         var currUrl = $(location).attr('href');
         var parts = currUrl.split("/");
         var currView = parts[4];
         if (currView != "")
             $("#" + currView + ">a").addClass("selected");

         // $(".CurAirExportDiv").attr("id", "CurAirExportDiv");
     });
</script>