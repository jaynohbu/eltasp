<link href="@Url.Content("~/Content/css/tab_siteadmin.css")" rel="stylesheet" type="text/css" />
<div id="SiteAdminDiv" style="height: 28px; position: relative; left: 0; overflow: hidden;
    width: 100%">
    <div id="divMore" style="cursor: pointer; height: 28px; position: absolute; z-index: 1;
        width: 20px">
        <ul style="margin-left: -57px; width: 4000px; position: absolute; left: 0px" id="SiteAdminUL">
            <li id="UserAdmin"><a class="noLeft" 
            href="@Url.Content("~/SiteAdmin/UserAdmin")" >
                <span>User Admin </span></a></li>
            <li id="CompanyInformation"><a class="noLeft" 
            href="@Url.Content("~/SiteAdmin/CompanyInformation")" >
                <span>Company Information </span></a></li>
            <li id="PrefixManager"><a class="noLeft" 
            href="@Url.Content("~/SiteAdmin/PrefixManager")" >
                <span>Prefix Manager </span></a></li>
            <li id="FavoriteManager"><a class="noLeft" 
            href="@Url.Content("~/SiteAdmin/FavoriteManager")" >
                <span>Favorite Manager </span></a></li>
        </ul>
    </div>
</div>
 <script type="text/javascript">
     $(document).ready(function () {
         //reset menu
         var submenues = $("#SiteAdminUL>li");
         submenues.each(function (index) {
             $(this).removeClass("selected");

         });

         //detect the name of view
         var currUrl = $(location).attr('href');
         var parts = currUrl.split("/");
         var currView = parts[4];

         if (currView != "")
             $("#" + currView + ">a").addClass("selected");

         // $(".CurAirExportDiv").attr("id", "CurAirExportDiv");
     });
</script>