<link href="@Url.Content("~/Content/css/tab_accounting_account_bank.css")" rel="stylesheet" type="text/css" />
<div id="BankDiv" style="overflow: hidden; height: 28px; position: relative; left: 0px;
    width: 100%">
    <div id="divMore" style="cursor: pointer; height: 28px; position: absolute; z-index: 1;
        width: 20px">
    <ul id="BankUL" style="position: absolute; margin-left: -57px; left: 0px; width: 4000px">
        <li id="BankRegister"><a class="noLeft" 
            href="@Url.Content("~/Accounting/BankRegister/parm=chkr")" >
                <span>Bank Register
            </span></a></li>
        <li id="BankWriteChecks"><a class="noLeft" 
            href="@Url.Content("~/Accounting/WriteCheck")" >
                <span>Write Checks </span></a>
        </li>
        <li id="BankPrintChecks"><a class="noLeft" 
            href="@Url.Content("~/Accounting/PrintCheck")" >
                <span>Print Checks </span></a>
        </li>
        <li id="BankManageChecks"><a class="noLeft" 
            href="@Url.Content("~/Accounting/BankManageChecks")" >
                <span>Manage Checks </span></a>
        </li>
        <li id="BankDeposit"><a class="noLeft" 
            href="@Url.Content("~/Accounting/BankDeposit")" >
                <span>Bank Deposit </span></a>
        </li>
    </ul>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        //reset menu
        var submenues = $("#BankUL>li");
        submenues.each(function (index) {
            $(this).removeClass("selected");

        });

        //detect the name of view
        var currUrl = $(location).attr('href');
        var parts = currUrl.split("/");
        var currView = parts[4];

        if (currView != "")
            $("#" + currView + ">a").addClass("selected");

        // $(".CurAirExportDiv").attr("id", "CurAirExportDiv");
    });
</script>