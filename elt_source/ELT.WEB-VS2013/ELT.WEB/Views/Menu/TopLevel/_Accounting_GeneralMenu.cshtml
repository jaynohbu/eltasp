<div id="GeneralDiv" style="overflow: hidden; height: 28px; position: relative; left: 0px;
    width: 100%">
    <div id="divMore" style="cursor: pointer; height: 28px; position: absolute; z-index: 1;
        width: 20px">
    <ul id="GeneralUL" style="position: absolute; margin-left: -57px; left: 0px; width: 4000px">
        <li id="ChartOfAccount"><a class="noLeft" 
            href="@Url.Content("~/Accounting/ChartOfAccount")" >
