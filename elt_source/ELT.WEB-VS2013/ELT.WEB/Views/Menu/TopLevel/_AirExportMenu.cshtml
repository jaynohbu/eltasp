@model ELT.WEB.Models.Menu
<link href="@Url.Content("~/Content/css/tab_airexport.css")" rel="stylesheet" type="text/css" />
<div id="AirExportDiv" style="overflow: hidden; height: 28px; position: relative;
    left: 0px; width: 100%">
    <div id="divMore" style="cursor: pointer; height: 28px; position: absolute; z-index: 1;
        visibility: hidden; width: 20px" ></div>
    <ul id="AirExportUL" style="position: absolute; margin-left: -57px; left: 0px; width: 100%">
        <li id="HAWB"><a class="noLeft" id="AirExportDivSelected" 
            href="@Url.Content("~/AirExport/HAWB")" >
            <span>HAWB </span></a></li>
        <li id="Booking"><a class="noLeft" 
            href="@Url.Content("~/AirExport/Booking")">
            <span>Booking </span></a></li>
        <li id="MAWB"><a class="noLeft" 
            href="@Url.Content("~/AirExport/MAWB")">
            <span>MAWB </span></a></li>
        <li id="CertificateOfOrigin"><a class="noLeft" 
            href="@Url.Content("~/AirExport/CertificateOfOrigin")">
            <span>Certificate Of Origin </span></a></li>
        <li id="AES"><a class="noLeft"  
            href="@Url.Content("~/AirExport/AES")">
            <span>AES </span></a></li>
        <li id="AgentPreAlert"><a class="noLeft" 
            href="@Url.Content("~/AirExport/AgentPreAlert")">
            <span>Agent Pre-Alert </span></a></li>
        <li id="ShippingNotice"><a class="noLeft" 
            href="@Url.Content("~/AirExport/ShippingNotice")">
            <span>Shipping Notice </span></a></li>
        <li id="PrintLabel"><a class="noLeft" 
            href="@Url.Content("~/AirExport/PrintLabel")">
            <span>Print Label </span></a></li>
        <li id="AESearch"><a class="noLeft" 
            href="@Url.Content("~/AirExport/AESearch")">
            <span>AE Search </span></a></li>
       
    </ul>
</div>

  <script type="text/javascript">
      $(document).ready(function () {
          //reset menu
          var submenues = $("#AirExportUL>li");
          submenues.each(function (index) {
              $(this).removeClass("selected");

          });

          //detect the name of view
          var currUrl = $(location).attr('href');
          var parts = currUrl.split("/");
          var currView = parts[4];

          if (currView != "")
              $("#" + currView + ">a").addClass("selected");
          
          // $(".CurAirExportDiv").attr("id", "CurAirExportDiv");
      });
</script>