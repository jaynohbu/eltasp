<link href="@Url.Content("~/Content/css/tab_report.css")" rel="stylesheet" type="text/css" />
<div id="ReportDiv" style="overflow: hidden; height: 28px; position: relative; left: 0px;
    width: 100%">
    <div id="divMore" style="cursor: pointer; height: 28px; position: absolute; z-index: 1;
        width: 20px">
    <ul id="ReportUL" style="position: absolute; margin-left: -57px; left: 0px; width: 4000px">
        <li id="AirExport"><a class="noLeft" 
            href="@Url.Content("~/Report/AirExport/")"><span>AE Operation
            </span></a></li>
        <li id="OceanExport"><a 
            href="@Url.Content("~/Report/OceanExport/")" ><span>OE
                Operation </span></a></li>
        <li id="AirImport"><a 
            href="@Url.Content("~/Report/AirImport/")"><span>AI Operation
            </span></a></li>
        <li id="OceanImport"><a 
            href="@Url.Content("~/Report/OceanImport/")"><span>OI
                Operation </span></a></li>
        <li id="PNL">
            <a class="noRight"
               href="@Url.Content("~/Report/PNL")">
                <span>PNL </span>
            </a>
        </li>
    </ul>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        //reset menu
        var submenues = $("#ReportUL>li");
        submenues.each(function (index) {
            $(this).removeClass("selected");

        });

        //detect the name of view
        var currUrl = $(location).attr('href');
        var parts = currUrl.split("/");
        var currView = parts[4];

        if (currView != "")
            $("#" + currView + ">a").addClass("selected");

        // $(".CurAirExportDiv").attr("id", "CurAirExportDiv");
    });
</script>