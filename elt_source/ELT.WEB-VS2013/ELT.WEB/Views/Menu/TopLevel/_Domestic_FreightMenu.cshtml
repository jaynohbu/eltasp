<link href="@Url.Content("~/Content/css/tab_domesticfreight.css")" rel="stylesheet" type="text/css" />
<div id="DomesticFreightDiv" style="overflow: hidden; height: 28px; position: relative;
    left: 0px; width: 100%">
    <div id="divMore" style="cursor: pointer; height: 28px; position: absolute; z-index: 1;
        visibility: hidden; width: 20px" onmouseover="bevelThis(this)" onmouseout="unbevelThis(this)"
        onclick="MoveSubMenu()">
        &gt;&gt;
    </div>
    <ul id="DomesticFreightUL" style="position: absolute; margin-left: -57px; left: 0px;
        width: 4000px">
        <li id="AirBooking"><a class="noLeft"  
            href="@Url.Content("~/DomesticFreight/AirBooking")" >
            <span>Air Booking </span></a></li>
        <li id="GroundBooking"><a class="noLeft"  
            href="@Url.Content("~/DomesticFreight/GroundBooking")" >
            <span>Ground Booking </span>
        </a></li>
        <li id="MasterAirBill"><a class="noLeft"  
            href="@Url.Content("~/DomesticFreight/MasterAirBill")" >
            <span>Master AirBill </span></a>
        </li>
        <li id="MasterGroundBill"><a class="noLeft"  
            href="@Url.Content("~/DomesticFreight/MasterGroundBill")" >
            <span>Master GroundBill </span>
        </a></li>
        <li id="HouseAirBill"><a class="noLeft"  
            href="@Url.Content("~/DomesticFreight/HouseAirBill")" >
            <span>House AirBill </span></a>
        </li>
        <li id="PreAlert"><a class="noLeft"  
            href="@Url.Content("~/DomesticFreight/AgentPreAlert")" >
            <span>Pre-Alert </span></a>
        </li>
        <li id="DeliveryConfirmation"><a class="noLeft"  
            href="@Url.Content("~/DomesticFreight/ShippingNotice")" >
            <span>Delivery Confirmation </span>
        </a></li>
        <li id="PrintLabel"><a class="noLeft"  
            href="@Url.Content("~/DomesticFreight/PrintLabel")" >
            <span>Print Label </span></a></li>
        <li id="Search"><a class="noRight" 
            href="@Url.Content("~/DomesticFreight/Search")" >
            <span>Search </span></a>
        </li>
    </ul>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        //reset menu
        var submenues = $("#DomesticFreightUL>li");
        submenues.each(function (index) {
            $(this).removeClass("selected");

        });

        //detect the name of view
        var currUrl = $(location).attr('href');
        var parts = currUrl.split("/");
        var currView = parts[4];

        if (currView != "")
            $("#" + currView + ">a").addClass("selected");

        // $(".CurAirExportDiv").attr("id", "CurAirExportDiv");
    });
</script>